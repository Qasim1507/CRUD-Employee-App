<div
  class="d-flex justify-content-between fles-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Edit <%= users.firstName %> <%= users.lastName %></h1>
</div>
<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active">
            Edit <%= users.firstName %> <%= users.lastName %> Data
          </li>
        </ol>
      </nav>
    </div>
  </div>
</div>

<form action="/edit/<%= users._id %>?_method=PUT" method="POST">
  <div class="row form-group mb-4">
    <div class="col">
      <label for="firstName">First Name</label>
      <input
        type="text"
        class="form-control"
        id="firstName"
        name="firstName"
        value="<%= users.firstName %>"
        placeholder="First Name"
      />
    </div>

    <div class="col">
      <label for="lastName">Last Name</label>
      <input
        type="text"
        class="form-control"
        id="lastName"
        name="lastName"
        value="<%= users.lastName %>"
        placeholder="Last Name"
      />
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="tel">Phone No.</label>
      <input
        type="text"
        class="form-control"
        id="tel"
        name="tel"
        value="<%= users.tel %>"
        placeholder="Telephone"
      />
    </div>

    <div class="col">
      <label for="address">Designation</label>
      <input
        type="text"
        class="form-control"
        id="designation"
        name="designation"
        value="<%= users.designation %>"
        placeholder="Designation"
      />
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="email">Email</label>
      <input
        type="text"
        class="form-control"
        id="email"
        name="email"
        value="<%= users.email %>"
        placeholder="Email"
      />
    </div>

    <div class="col">
      <label for="credentials">Credentials</label>
      <input
        type="password"
        class="form-control"
        id="credentials"
        name="credentials"
        value="<%= users.credentials %>"
        placeholder="Credentials"
      />
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="dept">Department</label>
      <input
        type="text"
        class="form-control"
        id="dept"
        name="dept"
        value="<%= users.dept %>"
        placeholder="Department"
      />
    </div>

    <div class="col">
      <label for="handover">Handover Form</label>
      <input
        type="file"
        class="form-control"
        id="handover"
        name="handover"
        value="<%= users.handover %>"
        placeholder="Handover Form"
        accept="application/pdf"
      />
    </div>
  </div>
  <div>
    <div class="row form-group mb-4">
      <div class="col">
        <label for="device">Devices</label>
        <div id="input-cont">
          <!-- Input container -->
        </div>
        <button onclick="addDevices()" class="btn-outline-secondary btn">
          Add Devices
        </button>

        <script>
          const container = document.getElementById("input-cont");

          // Call addDevices() function on button click
          function addDevices() {
            let dropdown = document.createElement("select");
            dropdown.classList.add("form-control");
            let option1 = document.createElement("option");
            option1.text = "Laptop";
            let option2 = document.createElement("option");
            option2.text = "Desktop";
            let option3 = document.createElement("option");
            option3.text = "Printer";
            dropdown.appendChild(option1);
            dropdown.appendChild(option2);
            dropdown.appendChild(option3);
            container.appendChild(dropdown);

            let input = document.createElement("input");
            input.classList.add("form-control");
            input.placeholder = "Device ID";
            container.appendChild(input);
          }
        </script>
      </div>
      <div class="col">
        <label for="antivirus">Antivirus</label>
        <br/>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
          <label class="form-check-label" for="inlineRadio1">Yes</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
          <label class="form-check-label" for="inlineRadio2">No</label>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Update Employee</button>
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
      Delete Employee
    </button>
  </div>
</form>
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">You are about to remove an employee record</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>
          This will remove the employee record of this employee
          <br />
          Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <form action="/edit/<%= users._id %>?_method=DELETE" method="POST" class="position-relative">
        <button type="button" class="btn btn-danger">Confirm</button>
      </div>
    </div>
  </div>
</div>
